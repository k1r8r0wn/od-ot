<%= title 'Registration' %>

<%= form_for(@user, builder: FoundationFormBuilder) do |f| %>

  <%= f.text_field :first_name, autofocus: 'autofocus' %>

  <%= f.text_field :last_name %>
  
  <%= f.text_field :email %>

  <%= f.password_field :password %>

  <%= f.password_field :password_confirmation %>
  
  <%= f.submit 'Sign Up', class: 'button large centered' %>

<% end %>
