<div class='row' id='todo-list-functions'>
  <div class='small-4 columns'>
    <%= link_to edit_todo_list_path(@todo_list), class: 'button hollow expanded' do %>
      <span class='fa fa-edit'></span>
      Edit
    <% end %>
  </div>
  <div class='small-4 columns'>
    <%= link_to '#', class: 'button hollow expanded', data: { 'open': 'email-modal' } do %>
      <span class='fa fa-envelope-o'></span>
      Email
    <% end %>
  </div>
  <div class='small-4 columns'>
    <%= link_to todo_list_path(@todo_list), class: 'alert button hollow expanded', method: :delete, data: { confirm: 'Are you sure you want to delete this list? This is no undo!' } do %>
      <span class='fa fa-trash-o'></span>
      Delete
    <% end %>
  </div>
</div>
